---
// Header component with navigation
---

<header
    class="fixed top-0 w-full bg-white/80 backdrop-blur-md z-50 border-b border-stone-200"
>
    <div class="max-w-6xl mx-auto px-6 py-4">
        <div class="flex justify-between items-center">
            <!-- Logo/Name -->
            <a
                href="/"
                class="font-serif text-xl font-semibold text-stone-900 hover:text-stone-700 transition-colors"
            >
                Natalie Cunningham
            </a>

            <!-- Desktop Navigation -->
            <nav class="hidden md:flex space-x-8">
                <a
                    href="#about"
                    class="text-stone-600 hover:text-stone-900 transition-colors font-medium"
                    >About</a
                >
                <a
                    href="#work"
                    class="text-stone-600 hover:text-stone-900 transition-colors font-medium"
                    >Work</a
                >
                <a
                    href="#contact"
                    class="text-stone-600 hover:text-stone-900 transition-colors font-medium"
                    >Contact</a
                >
            </nav>

            <!-- Mobile Menu Button -->
            <button class="md:hidden p-2" id="mobile-menu-button">
                <svg
                    class="w-6 h-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>

        <!-- Mobile Menu -->
        <nav class="md:hidden hidden pt-4 pb-2" id="mobile-menu">
            <div class="flex flex-col space-y-3">
                <a
                    href="#about"
                    class="text-stone-600 hover:text-stone-900 transition-colors font-medium"
                    >About</a
                >
                <a
                    href="#work"
                    class="text-stone-600 hover:text-stone-900 transition-colors font-medium"
                    >Work</a
                >
                <a
                    href="#contact"
                    class="text-stone-600 hover:text-stone-900 transition-colors font-medium"
                    >Contact</a
                >
            </div>
        </nav>
    </div>
</header>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const mobileMenuButton = document.getElementById("mobile-menu-button");
        const mobileMenu = document.getElementById("mobile-menu");

        mobileMenuButton?.addEventListener("click", function () {
            mobileMenu?.classList.toggle("hidden");
        });
    });
</script>
